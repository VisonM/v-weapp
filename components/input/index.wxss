/* components/input/index.wxss */
.wuss-input {
  align-items: center;
}

.wuss-input_label {
  color: #000;
  margin-left: 0;
  margin-right: 10rpx;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  display: flex;
  height: 100%;
  align-items: flex-start;
}

.wuss-cell-first-cell::before {
  display: none;
}

.wuss-class-left-empty {
  display: none !important;
}

.input_input-disabled,
.input_label-disabled {
  color: #888;
}

.wuss-input_input-wrap {
  /* flex: 1; */
  width: 100%;
  display: flex;
  align-items: center;
  position: relative;
}

.input-wrap--textarea {
  align-items: flex-start;
  padding-bottom: 40rpx;
}

.wuss-input_input-wrap .wuss-input_input {
  color: #000;
  appearance: none;
  width: 100%;
  border: 0;
  background-color: transparent;
  line-height: 1;
  box-sizing: border-box;
  margin: 20rpx 10rpx;
}

.wuss-extra {
  margin-left: 10rpx;
  vertical-align: middle;
}

.wuss-clear {
  flex-shrink: 0;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
  color: #ddd;
  font-style: normal;
  padding: 0 10px;
  line-height: inherit;
  margin-right: -10px;
  vertical-align: middle;
}

.wuss-textarea-count {
  position: absolute;
  bottom: 12rpx;
  right: 10rpx;
  color: #bbb;
  font-size: 28rpx;
}

.wuss-textarea-count .count {
  color: #000;
}

.wuss-class-hd {
  padding-top: 20rpx;
  align-items: flex-start;
}
