/* components/dialog/index.wxss */
.v-dialog {
  position: fixed;
  display: table;
  z-index: 1000;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  background-color: #ffffff;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
  max-width: 300px;
}

.v-dialog .slot-warp {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.v-dialog-show {
  display: table;
  opacity: 1;
}

.v-dialog-hide {
  display: none;
  opacity: 0;
}
